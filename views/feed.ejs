<%- include('partials/loggedInHeader') -%>

  <div class="container">
    <div class="row justify-content-center mt-5">
      <ul class="row list-unstyled">
        <% for(var i=0; i<posts.length; i++) {%>
          <li class="col-6 justify-content-between mt-5">
            <a href="/post/<%= posts[i]._id%>">
              <% if(posts[i].image.includes('video')){ %>
                <video width="400" height="240" controls src="<%= posts[i].image%>" type="video/mp4">
                </video>
              <% } else if(posts[i].image.includes('image')){ %>
                <img class="img-fluid" src="<%= posts[i].image%>" />
              <% } %>
            </a>
          </li>
        <% } %>
        </ul>
    </div>
  </div>  
<!-- <%- include('partials/footer') -%> -->
</body>
</html>