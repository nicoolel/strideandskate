<%- include('partials/loggedInHeader') -%>
<div class="container feed-gallery">
    <div class="row">
        <div class="col-12 mt-2 text-center">
            <p class="text-center h2 pb-2"><%= user.userName %>'s page</p>
            <a href="/profile" class="btn btn-primary post-btn">Create a Post</a>
            <a class="btn btn-primary feed-btn" href="/feed">Return to Feed</a>
            <ul class="row list-unstyled">
            <% for(var i=0; i<posts.length; i++) {%>
            <li class="col-12 col-md-6 col-lg-4 justify-content-between mt-2">
                <!-- find posts from the user that match the id from postController -->
                <a href="/post/<%= posts[i]._id%>">
                <% if(posts[i].image.includes('video')){ %>
                    <video width="250" height="250" controls src="<%= posts[i].image%>" type="video/mp4" class="feed-img">
                    </video>
                <% } else if(posts[i].image.includes('image')){ %>
                    <img class="img-fluid feed-img" src="<%= posts[i].image%>" />
                <% } %>
                </a>
            </li>
            <% } %>
            </ul>
        <div class="row justify-content-center mt-2 mb-2">
            
        </div>  
    </div>
</div>
<%- include('partials/footer') -%>