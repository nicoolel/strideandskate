<%- include('partials/loggedInHeader') -%>

    <div class="container profile">
      <div class="row mt-5">
          <div class="col-6">
              <div>
                  <p><strong>Welcome,</strong> <%= user.userName %></p>
                  <!-- <p><strong>Email</strong>: <%= user.email %></p> -->
              </div>
              <div class="mt-5">
                <h2>Add a post</h2>
                <form action="/post/createPost" enctype="multipart/form-data" method="POST">
                  <div class="mb-3">
                      <label for="title" class="form-label">Title</label>
                      <input type="text" class="form-control" id="title" name="title">
                  </div>
                  <div class="mb-3">
                    <label for="caption" class="form-label">Caption</label>
                    <textarea class="form-control" id="caption" name="caption"></textarea>
                  </div>
                  <div class="mb-3">
                    <label for="imgUpload" class="form-label">Image</label>
                    <input type="file" class="form-control" id="imageUpload" name="file">
                  </div>
                  <button type="submit" class="btn btn-primary submit-btn" value="Upload">Submit</button>
                </form>
              </div>
          </div>
          <div class="col-6">
            <p><%= user.userName %>'s Page</p>
            <ul class="row list-unstyled">
            <% for(var i=0; i<posts.length; i++) {%>
              <li class="col-6 justify-content-between mt-2">
                <!-- find posts from the user that match the id from postController -->
                <a href="/post/<%= posts[i]._id%>">
                  <% if(posts[i].image.includes('video')){ %>
                    <video width="250" height="250" controls src="<%= posts[i].image%>" type="video/mp4" class="feed-img">
                    </video>
                  <% } else if(posts[i].image.includes('image')){ %>
                    <img class="img-fluid feed-img" src="<%= posts[i].image%>" />
                  <% } %>
                  <!-- <img class="img-fluid" src="<%= posts[i].image%>"> -->
                </a>
              </li>
            <% } %>
            </ul>
            <div class="row justify-content-center mt-5">
              <a class="btn btn-primary feed-btn" href="/feed">Return to Feed</a>
            </div>  
          </div>  
        </div>
      </div>
    </div>
<%- include('partials/footer') -%>