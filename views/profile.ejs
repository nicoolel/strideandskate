<%- include('partials/loggedInHeader') -%>

    <div class="container profile col-12 col-sm-8">
      <div class="row justify-content-center uploadPost">
          <div class="col-12 col-md-10 py-4 px-4">
              <div>
                  <p class="text-center h2"><strong>Hello,</strong> <%= user.userName %></p>
                  <!-- <p><strong>Email</strong>: <%= user.email %></p> -->
              </div>
              <div class="mt-4">
                <h2 class="mb-2 h3">Add a post</h2>
                <form action="/post/createPost" enctype="multipart/form-data" method="POST">
                  <div class="mb-3">
                      <label for="title" class="form-label">Title</label>
                      <input type="text" class="form-control" id="title" name="title">
                  </div>
                  <div class="mb-3">
                    <label for="caption" class="form-label">Caption</label>
                    <textarea class="form-control" id="caption" name="caption"></textarea>
                  </div>
                  <div class="mb-3">
                    <label for="imgUpload" class="form-label">Image</label>
                    <input type="file" class="form-control" id="imageUpload" name="file">
                  </div>
                  <button type="submit" class="btn btn-primary submit-btn" value="Upload">Submit</button>
                </form>
              </div>
          </div>
        </div>
      </div>
<%- include('partials/footer') -%>